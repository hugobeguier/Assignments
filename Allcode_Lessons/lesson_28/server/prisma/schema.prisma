generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  fullName String 
  answers Answer[] @relation("UserAnswers")
}

model Quiz {
  id Int @id @default(autoincrement())
  quiz String
  title String
  answers Answer[] @relation("QuizAnswers")
}

model Answer {
  id Int @id @default(autoincrement())
  textField String
  userId Int
  user User @relation(fields: [userId], references: [id], name: "UserAnswers")
  createdDate DateTime @default(now())
  quizId Int
  quiz Quiz @relation(fields: [quizId], references: [id], name: "QuizAnswers")
}

model Feedback {
  id Int @id @default(autoincrement())
  comment String
}